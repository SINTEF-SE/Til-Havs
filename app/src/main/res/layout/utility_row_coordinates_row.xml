<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/utility_coordinates_row_header_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="@string/positions"
                />

            <Button
                android:id="@+id/utility_coordinates_row_help_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:background="@android:drawable/ic_menu_help"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/utility_coordinates_row_remove_position_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_remove_location_black_24dp"
                />

            <Button
                android:id="@+id/utility_coordinates_row_add_position_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_add_location_black_24dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/utility_coordinates_row_help_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@string/coordinates_help_text"
            />

        <LinearLayout
            android:id="@+id/utility_coordinates_row_lat_lon_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>
    </LinearLayout>
</TableRow>