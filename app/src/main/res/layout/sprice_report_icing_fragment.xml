<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="no.sintef.fiskinfo.util.UtilsKt" />
        <import type="android.text.InputType" />

        <variable
            name="viewmodel"
            type="no.sintef.fiskinfo.ui.sprice.ReportIcingViewModel" />
    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:context=".ui.map.MapFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_icing_category_header_observation_time"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/icingDetailsDateLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/icing_report_date"
                        app:startIconContentDescription="@string/proto_close_drawer"
                        app:startIconDrawable="@drawable/ic_date">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/icingReportDateField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="@{InputType.TYPE_NULL}"
                            android:text="@{UtilsKt.formatDate(viewmodel.synopDate)}" />

                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                        android:layout_marginStart="16dp"
                        app:startIconContentDescription="@string/proto_close_drawer"
                        app:startIconDrawable="@drawable/ic_time">

                        <AutoCompleteTextView
                            android:id="@+id/icingReportTimeField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="@string/sprice_icing_reporting_synop"
                            android:maxLength="7"
                            android:focusableInTouchMode="false"
                            android:text="@{viewmodel.synopHourSelect.toString()}" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_icing_category_header_temperature"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/activity_horizontal_margin_small"
                    >
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/reportIcingAirTemperatureInput"
                        android:layout_width="140dp"
                        android:maxLines="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reportIcingAirTemperatureInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:nextFocusDown="@+id/reportIcingSeaTemperatureInputEditText"
                            android:nextFocusLeft="@+id/reportIcingSeaTemperatureInputEditText"
                            android:nextFocusRight="@+id/reportIcingSeaTemperatureInputEditText"
                            android:hint="@string/icing_report_air_temperature_hint"
                            android:maxLines="1"
                            android:textAlignment="viewEnd"
                            android:inputType="numberDecimal|numberSigned"
                            android:text="@={viewmodel.airTemperature}"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:layout_weight="0.1" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/reportIcingSeaTemperatureInput"
                        android:layout_width="140dp"
                        android:maxLines="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reportIcingSeaTemperatureInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:nextFocusDown="@+id/reportIcingVesselIcingThicknessEditText"
                            android:nextFocusLeft="@+id/reportIcingVesselIcingThicknessEditText"
                            android:nextFocusRight="@+id/reportIcingVesselIcingThicknessEditText"
                            android:hint="@string/icing_report_sea_temperature_hint"
                            android:maxLines="1"
                            android:inputType="numberDecimal|numberSigned"
                            android:textAlignment="viewEnd"
                            android:text="@={viewmodel.seaTemperature}"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:layout_weight="0.1" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_icing_category_header_vessel_icing"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />

                <GridView
                    android:id="@+id/reportIcingVesselIcingGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="@dimen/activity_horizontal_margin_small"
                    android:numColumns="2"
                    android:verticalSpacing="@dimen/activity_vertical_margin_small"

                    >

                </GridView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/activity_horizontal_margin_small"
                    >
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/reportIcingVesselIcingThicknessInput"
                        android:layout_width="140dp"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reportIcingVesselIcingThicknessEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:hint="@string/icing_report_vessel_icing_thickness_hint"
                            android:maxLines="1"
                            android:selectAllOnFocus="true"
                            android:inputType="number"
                            android:text="@={viewmodel.vesselIcingThickness}"
                            android:textAlignment="viewEnd"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:layout_weight="0.1" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/reportIcingReasonForVesselIcingInput"
                        android:layout_width="140dp"
                        android:maxLines="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reportIcingReasonForVesselIcingEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:hint="@string/icing_report_vessel_reason_for_icing_hint"
                            android:maxLines="1"
                            android:selectAllOnFocus="true"
                            android:inputType="number"
                            android:text="@={viewmodel.reasonForVesselIcing}"
                            android:textAlignment="viewEnd"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:layout_weight="0.1" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_icing_category_header_wind_observations"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                        android:hint="@string/max_middle_wind_when"
                        app:startIconContentDescription="@string/proto_close_drawer"
                        app:startIconDrawable="@drawable/ic_icing_24">

                        <AutoCompleteTextView
                            android:id="@+id/icingDetailsTypeField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="@{InputType.TYPE_NULL}"
                            android:hint="@string/max_middle_wind_when"
                            android:text="@{viewmodel.maxMiddleWindTimeName}" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_icing_category_header_position"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/icingObservationPositionRecyclerView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/relativeLayout"
                            tools:listitem="@layout/location_list_item" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>